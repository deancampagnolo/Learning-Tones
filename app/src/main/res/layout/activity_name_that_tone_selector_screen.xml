<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#696969"
    tools:context="com.deancampagnolo.learningtones.NameThatToneSelectorScreen">

    <TextView
        android:id="@+id/SSRadioText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/SelectorScreenButtonSelectionInstructions"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        tools:text="@string/SelectorScreenButtonSelectionInstructions"
        tools:layout_editor_absoluteY="325dp"
        tools:layout_editor_absoluteX="138dp" />

    <Button

        android:id="@+id/NameThatToneNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/nextString"
        tools:layout_editor_absoluteY="686dp"
        tools:layout_editor_absoluteX="242dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/SSRadioText"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_gravity="center"
        android:columnCount="3"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="505dp">


        <CheckBox
            android:id="@+id/aRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/aNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/aNote" />

        <CheckBox
            android:id="@+id/asRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/asNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/asNote" />

        <CheckBox
            android:id="@+id/bRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/bNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/bNote" />

        <CheckBox
            android:id="@+id/cRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="1"
            android:text="@string/cNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/cNote" />

        <CheckBox
            android:id="@+id/csRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/csNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/csNote" />

        <CheckBox
            android:id="@+id/dRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/dNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/dNote" />

        <CheckBox
            android:id="@+id/dsRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:text="@string/dsNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/dsNote" />

        <CheckBox
            android:id="@+id/eRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/eNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/eNote" />

        <CheckBox
            android:id="@+id/fRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
