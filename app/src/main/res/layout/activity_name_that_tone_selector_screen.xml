<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5f715b"
    tools:context="com.deancampagnolo.learningtones.NameThatToneSelectorScreen">

    <TextView
        android:id="@+id/SSRadioText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="casual"

        android:gravity="center"
        android:text="@string/nameThatTone"
        android:textAlignment="center"
        android:textColor="#d29715"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1" />

    <TextView
        android:id="@+id/SSRadioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/SelectorScreenButtonSelectionInstructions"
        android:textAlignment="center"
        android:textColor="#d29715"

        android:textSize="24sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SSRadioText3"
        tools:layout_constraintBottom_creator="1"
        tools:text="@string/SelectorScreenButtonSelectionInstructions" />

    <Button

        android:id="@+id/nameThatToneNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonClicked"
        android:text="@string/nextString"
        app:layout_constraintBottom_toTopOf="@+id/adView3"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:layout_below="@+id/SSRadioText"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:columnCount="3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SSRadioText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1">


        <CheckBox
            android:id="@+id/aCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/aNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/aNote"

            />

        <CheckBox
            android:id="@+id/asCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/asNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/asNote"

            />

        <CheckBox
            android:id="@+id/bCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/bNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/bNote" />

        <CheckBox
            android:id="@+id/cCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="1"
            android:text="@string/cNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/cNote" />

        <CheckBox
            android:id="@+id/csCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/csNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/csNote" />

        <CheckBox
            android:id="@+id/dCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/dNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/dNote" />

        <CheckBox
            android:id="@+id/dsCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:text="@string/dsNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/dsNote" />

        <CheckBox
            android:id="@+id/eCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/eNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/eNote" />

        <CheckBox
            android:id="@+id/fCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/fNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/fNote" />

        <CheckBox
            android:id="@+id/fsCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="3"
            android:text="@string/fsNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/fsNote" />

        <CheckBox
            android:id="@+id/gCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/gNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/gNote" />

        <CheckBox
            android:id="@+id/gsCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/gsNote"
            android:textColor="@android:color/holo_green_light"
            tools:text="@string/gsNote" />

    </GridLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <CheckBox
            android:id="@+id/selectAllCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:text="@string/selectAll"
            android:textColor="@android:color/holo_purple"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            tools:layout_editor_absoluteX="161dp" />

        <CheckBox
            android:id="@+id/deselectAllCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:text="@string/deselectAll"
            android:textColor="@android:color/holo_orange_dark"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            tools:layout_editor_absoluteX="161dp" />
    </android.support.v7.widget.GridLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="placeHolder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBarLowerBound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/upperBoundText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lowerBoundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lowerBoundPitch"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/seekBarLowerBound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/upperBoundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upperBoundPitch"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/seekBarUpperBound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBarUpperBound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/nameThatToneNextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
